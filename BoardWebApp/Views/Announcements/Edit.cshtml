@model BoardWebApp.Models.Announcement

<h2>Редагувати оголошення</h2>

<form asp-action="Edit" method="post">
    <div>
        <input asp-for="Id" type="hidden" />
    </div>
    <div>
        <label>Заголовок</label>
        <input asp-for="Title" class="form-control" />
    </div>
    <div>
        <label>Опис</label>
        <textarea asp-for="Description" class="form-control"></textarea>
    </div>
    <div>
        <label>Категорія</label>
        <input asp-for="Category" class="form-control" />
    </div>
    <div>
        <label>Підкатегорія</label>
        <input asp-for="SubCategory" class="form-control" />
    </div>
    <div>
        <label>Активне</label>
        <input asp-for="Status" type="checkbox" />
    </div>
    <button type="submit" class="btn btn-primary mt-2">Зберегти</button>
</form>
